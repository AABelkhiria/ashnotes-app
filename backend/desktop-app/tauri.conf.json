{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ash Notes",
  "version": "1.0.0",
  "identifier": "my-app",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev:desktop -- --host",
    "beforeBuildCommand": "cd ../frontend && npm run build:desktop",
    "frontendDist": "../../frontend/build",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ash Notes",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "minWidth": 400,
        "minHeight": 300,
        "maximizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
